<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fichajes">

    <ImageView
        android:id="@+id/btnFichar"
        android:layout_width="233dp"
        android:layout_height="245dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/botonComprobante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_login_24" />

    <TextView
        android:id="@+id/PulsaBotonPara..."
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:text="Pulsame para fichar"
        app:layout_constraintBottom_toTopOf="@+id/btnFichar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonComprobante"
        android:layout_width="239dp"
        android:layout_height="62dp"
        android:layout_marginBottom="12dp"
        android:text="Este boton sera un comprobante"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="166dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/BotonMostarfFichas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MostarFichajes" />

        <Button
            android:id="@+id/mostarFichajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Fichajes" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>