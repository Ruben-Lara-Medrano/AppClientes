<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@drawable/degradado_color_pefil"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_gravity="end"
        android:background="@drawable/fondo_x_popup"
        android:gravity="center"
        android:hint="X"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="111dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Proyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/Nombre"
            android:inputType="date" />

        <EditText
            android:id="@+id/Estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/puestoPerfil"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="111dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/PlantillaPresupuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/telefonoPerfil"
            android:inputType="date" />

        <EditText
            android:id="@+id/Validez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/correoPerfil"
            android:inputType="phone" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubirProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/estilo_boton_popup"
        android:text="@string/btnCambiarUsuario"
        android:textColor="@color/white" />

</LinearLayout>